#!/usr/bin/env python3
import os, sys
from pathlib import Path
from sensors.agent import SensorAgent

def main(args):
  if not args or len(args) != 1:
    print("Usage: {} [CONFIG-FILE]".format(Path(__file__).name), file=sys.stderr)
  else:
    sensors = SensorAgent(config=args[0])
    sensors.start()

if __name__ == "__main__":
  main(sys.argv[1:])